<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título en la parte superior -->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Selecciona los pares correctos"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp" /> <!-- Esta propiedad centra el texto dentro del TextView -->



    <!-- Primer conjunto de imágenes y palabras (horizontal) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Conjunto de imágenes (a la izquierda) -->
        <LinearLayout
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_cat"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="8dp"
                android:src="@drawable/cat" />

            <ImageView
                android:id="@+id/img_dog"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="8dp"
                android:src="@drawable/dog" />

            <ImageView
                android:id="@+id/img_elephant"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="8dp"
                android:src="@drawable/elephant" />
        </LinearLayout>

        <!-- Conjunto de palabras (a la derecha) -->
        <LinearLayout
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gato"
                android:layout_marginBottom="42dp"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perro"
                android:layout_marginBottom="42dp"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_elephant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elefante"
                android:layout_marginBottom="42dp"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </LinearLayout>

    <!-- Segundo conjunto de imágenes y palabras (horizontal) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Conjunto de imágenes (a la izquierda) -->
        <LinearLayout
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Asegúrate de que las imágenes sean visibles y ajusta el tamaño -->
            <ImageView
                android:id="@+id/img_blueberry"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="8dp"
                android:src="@drawable/blueberry"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_apple"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="8dp"
                android:src="@drawable/apple"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_grape"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="8dp"
                android:src="@drawable/grape"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_strawberry"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="8dp"
                android:src="@drawable/strawberry"
                android:visibility="visible" />
        </LinearLayout>

        <!-- Conjunto de palabras (a la derecha) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_blueberry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blueberry"
                android:layout_marginBottom="24dp"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:layout_marginBottom="24dp"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_grape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grape"
                android:layout_marginBottom="24dp"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_strawberry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strawberry"
                android:layout_marginBottom="24dp"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </LinearLayout>

    <!-- Botón de comprobación -->
    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprobar"
        android:layout_gravity="center" />

</LinearLayout>