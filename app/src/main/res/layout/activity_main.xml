<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título en la parte superior -->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Selecciona los pares correctos"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Primer conjunto de imágenes y palabras (horizontal) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Conjunto de imágenes (a la izquierda) -->
    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cat"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/cat" />

        <ImageView
            android:id="@+id/img_dog"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/dog" />

        <ImageView
            android:id="@+id/img_elephant"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/elephant" />
    </LinearLayout>

    <!-- Conjunto de palabras (a la derecha) -->
    <LinearLayout
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gato"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perro"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_elephant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elefante"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</LinearLayout>

    <!-- Segundo conjunto de imágenes y palabras (horizontal) -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
android:gravity="center_vertical"
android:orientation="horizontal">

<!-- Conjunto de imágenes (a la izquierda) -->
    <LinearLayout
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Asegúrate de que las imágenes sean visibles y ajusta el tamaño -->
        <ImageView
            android:id="@+id/img_blueberry"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/blueberry"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_apple"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/apple"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_grape"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/grape"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_strawberry"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="8dp"
            android:src="@drawable/strawberry"
            android:visibility="visible" />
    </LinearLayout>

<!-- Conjunto de palabras (a la derecha) -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_blueberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Blueberry" />

    <Button
        android:id="@+id/btn_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Apple" />

    <Button
        android:id="@+id/btn_grape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Grape" />

    <Button
        android:id="@+id/btn_strawberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Strawberry" />
</LinearLayout>
</LinearLayout>

    <!-- Botón de comprobación -->
<Button
android:id="@+id/btn_check"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Comprobar"
android:layout_gravity="center" />

    </LinearLayout>
